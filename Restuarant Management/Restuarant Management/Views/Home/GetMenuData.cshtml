@model IEnumerable<SqlDataLayer.FoodMenu>

@{
    ViewBag.Title = "GetMenuData";
}

<h2>GetMenuData</h2>

<p>
    @Html.ActionLink("View Cart", "ViewCart")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Add", "AddToCart", new { id=item.FoodId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.FoodId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FoodId })*@
        </td>
    </tr>
}

</table>
